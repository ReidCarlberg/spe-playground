extends layout

block content
    h1.h3.text-center.mb-4 Containers

    if containers.length
      .row.g-2
        each container in containers
          .col-12
            .card.shadow-sm.border-0.p-2
              .card-body.p-3
                h5.card-title.mb-3
                  a(href=`/files/list/${container.id}`)= container.displayName
                p.card-text
                  strong Container Type ID: 
                  | #{container.containerTypeId}
                  br
                  strong Created: 
                  | #{container.createdDateTime}
                  br
                  strong Storage Used: 
                  | #{container.storageUsedInBytes} bytes
                  br
                  strong Ownership Type: 
                  | #{container.ownershipType}

                .d-grid.gap-2.mt-3
                  a.btn.btn-info.w-100(href=`/containers/drive/${container.id}`) Drive Properties
                  a.btn.btn-info.w-100(href=`/containers/perms/${container.id}`) View Perms
                  a.btn.btn-info.w-100(href=`/containers/grant-container/${container.id}`) Grant Perms
                  a.btn.btn-info.w-100(href=`/metadata/list/${container.id}`) Metadata Columns
                  a.btn.btn-info.w-100(href=`/metadata/property_add/${container.id}`) Set Property
                  a.btn.btn-info.w-100(href=`/metadata/properties/${container.id}`) List Properties
                  a.btn.btn-danger.w-100(href='/containers/delete/' + container.id onclick="return confirm('Are you sure?');") Delete

    else
      .alert.alert-info.mb-3 No containers found.

    p.text-center.mb-3
      a(href=`/containers/create` class="btn btn-primary") Create Container
